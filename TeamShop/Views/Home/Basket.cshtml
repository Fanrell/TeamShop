@model IEnumerable<Product>
@{
    ViewData["Title"] = "Basket";
}

<section id="table">
    <table class="list">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <th>Cena</th>

            </tr>
            @foreach (var item in Model)
            {
        <tr>
            <td>@item.Id</td>
            <td>@item.Price</td>
            @using (Html.BeginForm("DeleteFromCart", "HomeController", FormMethod.Post, new { @class = "DeleteFromCart-form" }))
            {
                <td><input type="submit" formaction="/Home/DeleteFromCart/@item.Id" value="Usuń"></td>
            }
            </tr>
            }
        </tbody>
    </table>
    <div>
        <table class="cost">
            <tbody>
                <tr>
                    <th>Cena produktów:</th>
                    <td>@Model.Sum(s => s.Price) PLN </td>
                </tr>
                <tr>
                    <th>Cena dostawy:</th>
                    <td>5 PLN</td>
                </tr>
            </tbody>
        </table>
    </div>

</section>
<section id="form">
    <form action="file:///C:/Users/Fanrell/AppData/Local/Temp/basket.html">
        <div class="data">
            <label for="name">Imię i nazwisko</label>
            <input type="text" name="name" id="name" placeholder="Imię i nazwisko" pattern=".{2,}" required="" title="Wypełnij to pole.">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" placeholder="email@address.com" required="">
            <label for="phone">Numer telefonu:</label>
            <input type="tel" name="phone" id="phone" placeholder="000-000-000" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}" required=""> <small>Format: 123-456-789</small>
            <label for="street">Ulica</label>
            <input type="text" name="street" id="street" placeholder="Ulica" pattern=".{2,}" required="" title="Wypełnij to pole.">
            <label for="building">Nr budynku</label>
            <input type="text" name="building" id="building" placeholder="Nr budynku" pattern=".{1,}" required="" title="Wypełnij to pole.">
            <label for="flat">Nr mieszkania</label>
            <input type="text" name="flat" id="flat" placeholder="Nr mieszkania">
            <label for="postal-code">Kod pocztowy</label>
            <input type="text" name="postal-code" id="postal-code" placeholder="Kod pocztowy" pattern="[0-9]{2}-[0-9]{3}" required="" title="Wypełnij to pole.">
            <label for="city">Miasto</label>
            <input type="text" name="city" id="city" placeholder="Miasto" pattern=".{2,}" required="" title="Wypełnij to pole.">
        </div>
        <div class="accept">
            <input type="radio" name="pay" id="pay" value="pay" required="">Płatność przelewem<br>
            <input type="radio" name="pay" value="pay2">Płatność za pobraniem<br><br>

            <label for="email">Masz jakieś uwagi? Zostaw wiadomość:</label>
            <textarea name="message" id="message" cols="30" rows="5" placeholder="Treść wiadomości: "></textarea><br>
            <label for="cena">Cena:</label>
            <input type="hidden" name="cena" id="cena">
            <br>
            <input type="checkbox" name="akceptacja" value="tak" required="">Akceptuję <a href="file:///C:/Users/Fanrell/AppData/Local/Temp/basket.html#" download="">regulamin</a> <br>

            <input id="submit" type="submit" name="submit" value="Zamawiam">
        </div>
    </form>

</section>