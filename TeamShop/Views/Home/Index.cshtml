@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<section id="second-nav">
    <ul>
        <li><a asp-area="" asp-controller="Home" asp-action="Catalog" onclick="">Karmy suche</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Catalog" onclick="">Karmy mokre</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Catalog" onclick="">Żwirki</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Catalog" onclick="">Kuwety</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Catalog" onclick="">Drapaki</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Catalog" onclick="">Zabawki</a></li>
        <li><a asp-area="" asp-controller="Home" asp-action="Catalog" onclick="">Akcesoria</a></li>
    </ul>
</section>

<section id="products">
    @foreach (var item in Model)
    {
        <span hidden>@item.Id</span>
        <a href="/Home/Catalog/@item.Id">
            <div class="product">
                <img src="~/img/@item.PictureName" class="img">
                <h3>@item.Title</h3>
                <p>@item.Price PLN</p>
            </div>
        </a>
    }
</section>
<section id="cookie-warn">
    <div>
        <p>Ta strona korzysta z ciasteczek aby świadczyć usugi na najwyższym poziomie. Dalsze korzystanie ze strony oznacza, że zgadzasz się na ich użycie.</p>
        <a href="javascript:void(0);" id="close-cookie-warn"><i class="icon-cancel"></i></a>
    </div>
</section>
