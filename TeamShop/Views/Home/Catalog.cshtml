@model TeamShop.Models.Product
@{
    ViewData["Title"] = "Catalog";
}

<section id="see-product">
    <a a asp-area="" asp-controller="Home" asp-action="Index" class="come-back"><i class="icon-angle-left"></i> WRÓĆ</a>
    <div class="see-img div1">
        <img src="~/img/@Model.PictureName" class="img">

        </img>
    </div>
    <div class="div2">
        <h2>@Model.Title</h2>
        <p>@Model.Description</p>
        <p><label for="price">Cena: @Model.Price PLN</label></p>
        <label for="quantity">Ilość:</label>
        <input id="quantity" type="number" name="quantity" min="1" max="@Model.Quantity" step="1" value="1">
        <button class="">Dodaj do koszyka</button>
    </div>

</section>