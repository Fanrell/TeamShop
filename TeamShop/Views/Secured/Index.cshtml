@{
    ViewData["Title"] = "Admin Panel";
}

<section id="sign-in" style="color:black;">

    <form action="" method="post">
        <h1>Admin</h1>
        <p><i class="icon-paw"></i>SKLEP</p>
        <label for="title">Tytuł:</label>
        <input type="text" id="title" name="title">

        <label for="price">Cena:</label>
        <input type="number" id="price" name="price">

        <label for="quantity">Ilość:</label>
        <input type="number" id="quantity" name="quantity">

        <label for="tags">Tagi:</label><br />

        <select name="tags" id="tags">
            <option value="psy">Psy</option>
            <option value="koty">Koty</option>
            <option value="inne">Inne</option>
        </select><br />

        <label for="types">Kategoria:</label><br />

        <select name="types" id="types">
            <option value="suche">Suche</option>
            <option value="mokre">Mokre</option>
            <option value="zwirki">Żwirki</option>
            <option value="kuwety">Kuwety</option>
            <option value="drapaki">Drapaki</option>
            <option value="zabawki">Zabawki</option>
            <option value="akcesoria">Akcesoria</option>
        </select><br />

        <label for="description">Opis:</label>
        <textarea name="description" id="description" cols="30" rows="10"></textarea>

        <input name="attach1" type="file" />

        <input type="submit" class="submit" value="Wyślij">
    </form>

</section>